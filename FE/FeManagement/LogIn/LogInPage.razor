@page "/"
@layout LoginLayout



<MudPaper Class="login-container" Elevation="0" Style="height:100vh">
    <MudGrid Style="height:100%">

        <!-- Parte izquierda: formulario -->
        <MudItem xs="12" md="3" Style="display:flex;align-items:center;">
            <MudContainer Class="form-section">
                <MudText Typo="Typo.h4" Class="mb-4">Iniciar sesión</MudText>

                <MudTextField Label="Usuario" @bind-Value="username" FullWidth="true" />
                <MudTextField Label="Contraseña" InputType="InputType.Password" @bind-Value="password" FullWidth="true" Class="mt-2" />

                @if (loginFailed)
                {
                    <MudText Color="Color.Error" Class="mt-2">Credenciales inválidas</MudText>
                }
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="HandleLogin" Class="mt-4" FullWidth="true">
                    Entrar
                </MudButton>

            </MudContainer>
        </MudItem>

        <!-- Parte derecha: imagen -->
        <MudItem xs="12" md="9" Style="background-color:red;height:100%;">
            
        </MudItem>

    </MudGrid>
</MudPaper>
