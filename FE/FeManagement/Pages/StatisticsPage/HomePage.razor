@page "/home"

@inject ISnackbar Snackbar

@inject NavigationManager navigate

@implements IDisposable

<PageTitle>Inicio</PageTitle>

<MudGrid>
	@foreach (var item in StatisticsList)
	{
		<MudItem xs="12" sm="6">
			<MudPaper Elevation="2" Style="display:flex;align-items:center;justify-content:center;min-height:250px;flex-direction:column;padding:24px">
				<MudText style="font-size:18px">
					Ha pasado
				</MudText>
				<br />
				<MudText style="font-size:25px;font-weight:bold;">
					@TiempoTranscurrido(item.StartDate)
				</MudText>
				<br />

				<MudText Style="font-size:19px">
					desde @item.Name
				</MudText>
				<br />
				<MudText style="font-size:18px">
					que fue el dia @item.StartDate.ToShortDateString()
				</MudText>
			</MudPaper>
		</MudItem>
	

		@* 
		<MudText>@item.Name con id @item.Id el dia @item.StartDate</MudText> *@
	}
</MudGrid>